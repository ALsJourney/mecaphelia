generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Car {
  id                  String       @id @default(cuid())
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt
  make                String
  model               String       
  year                Int
  vin                 String?
  purchasePrice       Int
  purchaseDate        DateTime
  currentMileage      Int
  nextInspectionDate  DateTime
  nextServiceDate     DateTime?
  imageUrl            String?
  userId              String
  user                User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  problems   Problem[]
  expenses   Expense[]
  documents  Document[]

  @@index([userId])
}

model User {
  id           String    @id @default(cuid())
  username     String    @unique
  email        String    @unique
  passwordHash String
  session      Session[]
  cars         Car[]
  problems     Problem[]
  expenses     Expense[]
  documents    Document[]
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String

  @@index([userId])
}

enum ProblemStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
}

enum ProblemSeverity {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum ExpenseType {
  PURCHASE
  MAINTENANCE
  REPAIR
  TUNING
  TAX_INSURANCE
  OTHER
}

model Problem {
  id            String          @id @default(cuid())
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  title         String
  description   String
  status        ProblemStatus   @default(OPEN)
  severity      ProblemSeverity @default(MEDIUM)
  estimatedCost Int?
  aiAnalysis    String?
  carId         String
  car           Car             @relation(fields: [carId], references: [id], onDelete: Cascade)
  userId        String
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([carId])
  @@index([userId])
}

model Expense {
  id          String      @id @default(cuid())
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  description String
  amount      Int
  date        DateTime
  type        ExpenseType @default(MAINTENANCE)
  carId       String
  car         Car         @relation(fields: [carId], references: [id], onDelete: Cascade)
  userId      String
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([carId])
  @@index([userId])
}

model Document {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  name         String
  fileType     String
  content      String
  carId        String
  car          Car      @relation(fields: [carId], references: [id], onDelete: Cascade)
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([carId])
  @@index([userId])
}